<h1>Dirty Burgers!</h1>

<h2>Burgers to be Consumed</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers Consumed</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Consumed?</label><br>
    <input type="radio" name="devoured" value="1" checked> Consumed!<br>
    <input type="radio" name="devoured" value="0"> Eat me next!
  </div>

  <button type="submit">Add Burger</button>
</form>
